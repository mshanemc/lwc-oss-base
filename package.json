{
    "name": "@mshanemc/lwc-oss-base",
    "description": "baes components for sharing across lwc-oss projects",
    "version": "0.0.0",
    "author": "mshanemc",
    "bugs": "https://github.com/mshanemc/lwc-oss-base/issues",
    "dependencies": {
        "lwc-services": "^1.3.12"
    },
    "devDependencies": {
        "@types/jest": "^24",
        "@typescript-eslint/eslint-plugin": "^2.14.0",
        "husky": "^3.0.7",
        "lint-staged": "^9.4"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "files": [
        "src/modules/base"
    ],
    "homepage": "https://github.com/mshanemc/lwc-oss-base",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.ts": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    },
    "repository": "mshanemc/lwc-oss-base",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.ts",
        "prettier": "prettier --write '**/*.{css,html,js,json,md,ts,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{css,html,js,json,md,ts,yaml,yml}'",
        "serve": "lwc-services serve",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
